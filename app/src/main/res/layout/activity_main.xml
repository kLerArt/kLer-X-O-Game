<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/VPlayer1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Player 1 X:"            android:textSize="60sp"            android:freezesText="true"            />        <TextView            android:id="@+id/VPlayer2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/VPlayer1"            android:text="Player 2 O:"            android:textSize="60sp"            android:freezesText="true"/>        <Button            android:id="@+id/ButtonRest"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentEnd="true"            android:layout_alignParentRight="true"            android:layout_marginEnd="20dp"            android:layout_marginRight="20dp"            android:background="#FFEB3B"            android:text="Rest"            android:textColor="#21C027"            android:freezesText="true" />        <Button            android:id="@+id/ButtonRestart"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/ButtonRest"            android:layout_alignParentEnd="true"            android:layout_alignParentRight="true"            android:layout_marginTop="21dp"            android:layout_marginEnd="0dp"            android:layout_marginRight="0dp"            android:background="#D33024"            android:text="Restart Over"            android:textColor="#1F0101"            android:freezesText="true"            />        <Button            android:id="@+id/ChangePage"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/ButtonRestart"            android:layout_alignParentEnd="true"            android:layout_alignParentRight="true"            android:layout_marginTop="-1dp"            android:layout_marginEnd="0dp"            android:layout_marginRight="0dp"            android:background="#A7FFEB"            android:onClick="onClick"            android:text="Another One"            android:textColor="#AA00FF"            android:freezesText="true"/>    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <Button            android:layout_margin="2dp"            android:id="@+id/bottom00"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#FF5722"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom01"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom02"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true"            />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <Button            android:layout_margin="2dp"            android:id="@+id/bottom10"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom11"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom12"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <Button            android:layout_margin="2dp"            android:id="@+id/bottom20"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom21"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />        <Button            android:layout_margin="2dp"            android:id="@+id/bottom22"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="#00BCD4"            android:textColor="#F44336"            android:textSize="65sp"            android:freezesText="true" />    </LinearLayout></LinearLayout>